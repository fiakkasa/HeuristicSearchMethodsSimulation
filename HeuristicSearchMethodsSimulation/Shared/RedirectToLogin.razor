@inject NavigationManager NavigationManager

@code{
    protected override async Task OnInitializedAsync()
    {
        var returnUrl = await Task.FromResult($"~/{NavigationManager.ToBaseRelativePath(NavigationManager.Uri)}");
        NavigationManager.NavigateTo(
            $"{NavigationManager.BaseUri}Identity/Account/Login?returnUrl={returnUrl}",
            forceLoad: true
        );
    }
}
