@inherits LayoutComponentBase
@using Microsoft.Extensions.Options
@using HeuristicSearchMethodsSimulation.Models
@inject IOptions<AppOptions> appOptionsAccessor

<div class="page vh-100 d-flex flex-column">
    <nav class="navbar navbar-light bg-light flex-shrink-0">
        <div class="container-fluid justify-content-center overflow-hidden">
            <NavLink class="navbar-brand" href="" Match="NavLinkMatch.All">
                @appOptionsAccessor.Value.Title
            </NavLink>
            <div class="flex-fill d-none d-sm-block d-md-block d-lg-block d-xl-block"></div>
            <div class="d-flex flex-shrink-0 flex-grow-0">
                <LoginDisplay />
            </div>
        </div>
    </nav>
    <div class="flex-fill overflow-auto p-1">
        <div class="container-fluid">
            @Body
        </div>
    </div>
</div>
